<script>

str = "hello this world";
array = str.split(' ');
newarray = [];

for (var i=0; i < array.length; i++){
    if (array[i].length >= 5) {
        console.log( array[i].split("").reverse().join("") );
        newarray.push( array[i].split("").reverse().join("") );
    }
    else {
        console.log( array[i] );
        newarray.push( array[i]);
    }
    
}



console.log( newarray.join(" ") );


</script> 
